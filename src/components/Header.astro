---
import { siteConfig } from '../data/site';
import { ViewTransitions } from 'astro:transitions';

// Get current path for active navigation highlighting
const currentPath = Astro.url.pathname;
---

<header class="header">
  <div class="container">
    <div class="header-content">
      <div class="logo">
        <a href="/" class="logo-link">
          <div class="logo-container">
            <img src="/images/logo.png" alt="Silvin Homes Logo" class="logo-image">
            <span class="logo-text">
              <span class="logo-first-word">{siteConfig.name.split(' ')[0]}</span>
              <span class="logo-rest">{siteConfig.name.split(' ').slice(1).join(' ')}</span>
            </span>
          </div>
        </a>
      </div>
      
      <nav class="navigation">
        <ul class="nav-list">
          {siteConfig.navigation.map((item) => (
            <li class="nav-item">
              <a 
                href={item.href} 
                class={`nav-link ${currentPath === item.href ? 'active' : ''}`}
              >
                {item.title}
              </a>
            </li>
          ))}
        </ul>
      </nav>

      <button class="mobile-menu-toggle" aria-label="Toggle mobile menu">
        <span class="hamburger"></span>
        <span class="hamburger"></span>
        <span class="hamburger"></span>
      </button>
    </div>
  </div>
</header>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background: #ffffff;
    border-bottom: 2px solid #101820;
    z-index: 1000;
    transition: all 0.3s ease;
    box-shadow: 0 2px 20px rgba(16, 24, 32, 0.1);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .header-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 70px;
  }

  .logo-link {
    text-decoration: none;
    color: inherit;
  }

  .logo-container {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .logo-image {
    height: 1.5rem;
    width: auto;
    object-fit: contain;
  }

  .logo-text {
    font-size: 1.5rem;
    font-weight: 400;
    color: #101820;
    font-family: 'Sinkin Sans', system-ui, sans-serif;
  }

  .logo-first-word {
    color: #84754e;
  }

  .logo-rest {
    color: #101820;
  }

  .navigation {
    display: flex;
    align-items: center;
  }

  .nav-list {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 2rem;
  }

  .nav-link {
    text-decoration: none;
    color: #101820;
    font-weight: 500;
    transition: color 0.3s ease;
    position: relative;
    font-family: 'Sinkin Sans', system-ui, sans-serif;
  }

  .nav-link:hover,
  .nav-link.active {
    color: #84754e;
  }

  .nav-link.active::after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 0;
    right: 0;
    height: 3px;
    background: #84754e;
    transform: scaleX(1);
    transition: transform 0.3s ease;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 0;
    right: 0;
    height: 3px;
    background: #84754e;
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }

  .nav-link:hover::after {
    transform: scaleX(1);
  }

  .mobile-menu-toggle {
    display: none;
    flex-direction: column;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
  }

  .hamburger {
    width: 25px;
    height: 3px;
    background: #101820;
    margin: 3px 0;
    transition: 0.3s;
  }

  @media (max-width: 768px) {
    .navigation {
      display: none;
    }

    .mobile-menu-toggle {
      display: flex;
    }
  }
</style>

<script>
  // Mobile menu toggle functionality
  document.addEventListener('DOMContentLoaded', () => {
    const mobileToggle = document.querySelector('.mobile-menu-toggle');
    const navigation = document.querySelector('.navigation');
    
    if (mobileToggle && navigation) {
      mobileToggle.addEventListener('click', () => {
        navigation.classList.toggle('active');
        mobileToggle.classList.toggle('active');
      });
    }
  });
</script> 