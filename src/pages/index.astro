---
import Layout from '../layouts/Layout.astro';
import { siteConfig } from '../data/site';
---

<Layout title={`${siteConfig.name} - ${siteConfig.description}`}>
	<section class="hero">
		<div class="hero-background">
			<img src="/images/BlueHouse.jpg" alt="Blue House" class="hero-image">
			<div class="hero-overlay"></div>
		</div>
		<div class="container">
			<div class="hero-content">
				<div class="hero-options">
					<div class="option-card">
						<div class="option-icon">üè†</div>
						<h3>New Homes</h3>
						<p>Custom-built homes designed to your specifications</p>
						<a href="/available" class="btn">Explore Homes</a>
					</div>
					<div class="option-card">
						<div class="option-icon">üìç</div>
						<h3>Available Lots</h3>
						<p>Prime locations for your dream home</p>
						<a href="/available" class="btn">View Lots</a>
					</div>
					<div class="option-card">
						<div class="option-icon">üí∞</div>
						<h3>Financing</h3>
						<p>Flexible financing options to make it happen</p>
						<a href="/financing" class="btn">Learn More</a>
					</div>
				</div>
			</div>
		</div>
	</section>

	<section class="company-intro section">
		<div class="container">
			<h2 class="company-title">Lococo Development</h2>
			<div class="company-text">
				<p>Welcome to our construction company, where we specialize in building new homes tailored to your dreams and lifestyle.</p>
				<p>With a commitment to quality craftsmanship and attention to detail, we transform your vision into reality, creating spaces that are both functional and beautiful.</p>
				<p>In addition to new constructions, we offer comprehensive house renovation and repair services to enhance and maintain your home's value.</p>
				<p>Whether you're looking to modernize your kitchen, expand your living space, or fix structural issues, our expert team is here to deliver exceptional results, ensuring your home remains your sanctuary.</p>
			</div>
		</div>
	</section>

	<section class="blueprint-section">
		<div class="blueprint-background">
			<img src="/images/Blueprints.jpg" alt="Blueprints" class="blueprint-image">
			<div class="blueprint-overlay"></div>
		</div>
		<div class="blueprint-content">
			<h2 class="blueprint-title">INDIVIDUALITY<br>MEETS<br>INNOVATION</h2>
		</div>
	</section>

	<section class="clients section">
		<div class="container">
			<h2 class="section-title">Our Clients</h2>
			<div class="clients-grid">
				<div class="client-card">
					<div class="client-logo">DAmico</div>
					<p>Trusted partner in residential development</p>
				</div>
				<div class="client-card">
					<div class="client-logo">NewGen</div>
					<p>Innovative solutions for modern living</p>
				</div>
				<div class="client-card">
					<div class="client-logo">Kalart</div>
					<p>Excellence in architectural design</p>
				</div>
			</div>
		</div>
	</section>
</Layout>

<style>
	.hero {
		position: relative;
		color: white;
		padding: 8rem 0 4rem;
		text-align: center;
		overflow: hidden;
	}

	.hero-background {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		z-index: -2;
	}

	.hero-image {
		width: 100%;
		height: 100%;
		object-fit: cover;
		object-position: center;
	}

	.hero-overlay {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: rgba(0, 0, 0, 0.4);
		z-index: -1;
	}

	.hero-content {
		max-width: 1200px;
		margin: 0 auto;
		position: relative;
		z-index: 1;
	}

	.hero-title {
		font-size: 3.5rem;
		font-weight: 700;
		margin-bottom: 1rem;
		line-height: 1.2;
		text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
	}

	.hero-subtitle {
		font-size: 1.3rem;
		margin-bottom: 3rem;
		opacity: 0.9;
		text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
	}

	.hero-options {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 2rem;
	}

	.option-card {
		background: rgba(255, 255, 255, 0.95);
		color: #333;
		padding: 2rem;
		border-radius: 15px;
		text-align: center;
		backdrop-filter: blur(10px);
		box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
		transition: transform 0.3s ease, box-shadow 0.3s ease;
	}

	.option-card:hover {
		transform: translateY(-5px);
		box-shadow: 0 12px 40px rgba(0, 0, 0, 0.2);
	}

	.option-icon {
		font-size: 3rem;
		margin-bottom: 1rem;
	}

	.option-card h3 {
		font-size: 1.5rem;
		margin-bottom: 1rem;
		color: #333;
		font-weight: 600;
	}

	.option-card p {
		color: #666;
		line-height: 1.6;
		margin-bottom: 1.5rem;
	}

	.option-card .btn {
		background: #007bff;
		color: white;
		padding: 0.75rem 1.5rem;
		text-decoration: none;
		border-radius: 5px;
		transition: background 0.3s ease;
		display: inline-block;
		font-weight: 500;
	}

	.option-card .btn:hover {
		background: #0056b3;
	}

	.company-intro {
		background: white;
		padding: 6rem 0;
		text-align: center;
	}

	.company-title {
		font-size: 3rem;
		font-weight: 700;
		color: #333;
		margin-bottom: 3rem;
		text-transform: uppercase;
		letter-spacing: 2px;
	}

	.company-text {
		max-width: 800px;
		margin: 0 auto;
		text-align: left;
	}

	.company-text p {
		font-size: 1.2rem;
		line-height: 1.8;
		color: #555;
		margin-bottom: 1.5rem;
	}

	.blueprint-section {
		position: relative;
		height: 500px;
		overflow: hidden;
	}

	.blueprint-background {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		z-index: -2;
	}

	.blueprint-image {
		width: 100%;
		height: 100%;
		object-fit: cover;
		object-position: center;
	}

	.blueprint-overlay {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: rgba(0, 0, 0, 0.5);
		z-index: -1;
	}

	.blueprint-content {
		position: relative;
		z-index: 1;
		height: 100%;
		display: flex;
		align-items: center;
		justify-content: center;
		text-align: center;
	}

	.blueprint-title {
		font-size: 4rem;
		font-weight: 700;
		color: white;
		text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
		line-height: 1.2;
		letter-spacing: 3px;
		text-transform: uppercase;
		margin: 0;
	}

	.clients {
		background: white;
		padding: 6rem 0;
	}

	.clients-grid {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 3rem;
		margin-top: 3rem;
	}

	.client-card {
		text-align: center;
		padding: 2rem;
		border: 2px solid #f0f0f0;
		border-radius: 15px;
		transition: all 0.3s ease;
	}

	.client-card:hover {
		border-color: #007bff;
		transform: translateY(-5px);
		box-shadow: 0 8px 25px rgba(0, 123, 255, 0.1);
	}

	.client-logo {
		font-size: 2.5rem;
		font-weight: 700;
		color: #007bff;
		margin-bottom: 1rem;
		letter-spacing: 1px;
	}

	.client-card p {
		color: #666;
		font-size: 1.1rem;
		line-height: 1.6;
		margin: 0;
	}

	@media (max-width: 768px) {
		.hero {
			padding: 6rem 0 3rem;
		}

		.hero-title {
			font-size: 2.5rem;
		}

		.hero-subtitle {
			font-size: 1.1rem;
		}

		.hero-options {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}

		.company-title {
			font-size: 2.5rem;
		}

		.company-text p {
			font-size: 1.1rem;
		}

		.blueprint-background {
			height: 300px;
		}

		.blueprint-title {
			font-size: 2.5rem;
			letter-spacing: 2px;
		}

		.clients-grid {
			grid-template-columns: 1fr;
			gap: 2rem;
		}

		.client-logo {
			font-size: 2rem;
		}
	}
</style>
