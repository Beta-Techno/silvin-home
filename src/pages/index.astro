---
import Layout from '../layouts/Layout.astro';
import { siteConfig } from '../data/site';
---

<Layout title={`${siteConfig.name} - ${siteConfig.description}`}>
	<section class="hero">
		<div class="hero-background">
			<img src="/images/ColonialRender.jpg" alt="Colonial Home" class="hero-image">
			<div class="hero-overlay"></div>
		</div>
		<div class="container">
			<div class="hero-content">
				<div class="hero-options">
					<div class="option-card">
						<div class="option-image">
							<img src="/images/completed.png" alt="Completed Projects" class="card-image">
						</div>
						<h3>Completed</h3>
						<p>View our finished projects and transformations</p>
						<a href="/projects" class="btn">View Projects</a>
					</div>
					<div class="option-card">
						<div class="option-image">
							<img src="/images/current.png" alt="Current Projects" class="card-image">
						</div>
						<h3>Current</h3>
						<p>See what we're building right now</p>
						<a href="/projects" class="btn">View Progress</a>
					</div>
					<div class="option-card">
						<div class="option-image">
							<img src="/images/future.png" alt="Future Projects" class="card-image">
						</div>
						<h3>Future</h3>
						<p>Explore upcoming opportunities and developments</p>
						<a href="/available" class="btn">Learn More</a>
					</div>
				</div>
			</div>
		</div>
	</section>

	<section class="company-intro section">
		<div class="container">
			<h2 class="company-title">Silvin Homes</h2>
			<div class="company-text">
				<p>Silvin Homes is a trusted home builder, delivering quality craftsmanship, modern design, and lasting value for families across Connecticut.</p>
			</div>
		</div>
	</section>

	<section class="blueprint-section">
		<div class="blueprint-background">
			<img src="/images/Blueprints.jpg" alt="Blueprints" class="blueprint-image">
			<div class="blueprint-overlay"></div>
		</div>
		<div class="blueprint-content">
			<h2 class="blueprint-title">INDIVIDUALITY<br>MEETS<br>INNOVATION</h2>
		</div>
	</section>

	<section class="clients section">
		<div class="container">
			<h2 class="section-title">Our Vendors</h2>
			<div class="clients-grid">
				<div class="client-card">
					<div class="client-logo">
						<img src="/images/abcsupplycoinc.svg" alt="ABC Supply" class="vendor-logo">
					</div>
					<p>Quality building materials and supplies</p>
				</div>
				<div class="client-card">
					<div class="client-logo">
						<img src="/images/lansingbuildingproducts.png" alt="Lansing Building Products" class="vendor-logo">
					</div>
					<p>Professional building products and solutions</p>
				</div>
				<div class="client-card">
					<div class="client-logo">
						<img src="/images/bender.png" alt="Bender Plumbing" class="vendor-logo">
					</div>
					<p>Expert plumbing services and installations</p>
				</div>
			</div>
		</div>
	</section>
</Layout>

<style>
	.hero {
		position: relative;
		color: white;
		padding: 12rem 0 8rem;
		text-align: center;
		overflow: hidden;
		min-height: 100vh;
		display: flex;
		align-items: center;
	}

	.hero-background {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		z-index: -2;
	}

	.hero-image {
		width: 100%;
		height: 100%;
		object-fit: cover;
		object-position: center bottom;
	}

	.hero-overlay {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(to bottom, rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.7));
		z-index: -1;
	}

	.hero-content {
		max-width: 1200px;
		margin: 0 auto;
		position: relative;
		z-index: 1;
	}

	.hero-title {
		font-size: 3.5rem;
		font-weight: 500;
		margin-bottom: 1rem;
		line-height: 1.2;
		text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
	}

	.hero-subtitle {
		font-size: 1.3rem;
		margin-bottom: 3rem;
		opacity: 0.9;
		text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
	}

	.hero-options {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 3rem;
		max-width: 1200px;
		margin: 0 auto;
	}

	.option-card {
		background: transparent;
		color: white;
		padding: 3rem 2rem;
		border: 2px solid transparent;
		text-align: center;
		transition: all 0.3s ease;
		position: relative;
		overflow: hidden;
	}

	.option-card::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 4px;
		background: #84754e;
		transform: scaleX(0);
		transition: transform 0.3s ease;
	}

	.option-card:hover::before {
		transform: scaleX(1);
	}

	.option-card:hover {
		border-color: #84754e;
		transform: translateY(-8px);
		box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
	}

	.option-image {
		margin-bottom: 1.5rem;
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.card-image {
		width: 80px;
		height: 80px;
		object-fit: contain;
		filter: brightness(0) invert(1);
		transition: all 0.3s ease;
	}

	.option-card:hover .card-image {
		filter: brightness(0) invert(1) sepia(1) saturate(5) hue-rotate(30deg);
	}

	.option-card h3 {
		font-size: 1.5rem;
		margin-bottom: 1rem;
		color: white;
		font-weight: 500;
		font-family: 'Sinkin Sans', system-ui, sans-serif;
	}

	.option-card p {
		color: rgba(255, 255, 255, 0.9);
		line-height: 1.6;
		margin-bottom: 1.5rem;
	}

	.option-card .btn {
		background: #84754e;
		color: white;
		padding: 0.75rem 1.5rem;
		text-decoration: none;
		border-radius: 5px;
		transition: background 0.3s ease;
		display: inline-block;
		font-weight: 500;
	}

	.option-card .btn:hover {
		background: #6b6140;
	}

	.company-intro {
		background: #f8f9fa;
		padding: 8rem 0;
		text-align: center;
		position: relative;
	}

	.company-intro::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 1px;
		background: #84754e;
	}

	.company-title {
		font-size: 3rem;
		font-weight: 500;
		color: #101820;
		margin-bottom: 3rem;
		text-transform: uppercase;
		letter-spacing: 2px;
		font-family: 'Sinkin Sans', system-ui, sans-serif;
	}

	.company-text {
		max-width: 800px;
		margin: 0 auto;
		text-align: left;
	}

	.company-text p {
		font-size: 1.2rem;
		line-height: 1.8;
		color: #84754e;
		margin-bottom: 1.5rem;
		font-weight: 400;
		font-family: 'Sinkin Sans', system-ui, sans-serif;
	}

	.blueprint-section {
		position: relative;
		height: 600px;
		overflow: hidden;
		background: #101820;
	}

	.blueprint-background {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		z-index: -2;
	}

	.blueprint-image {
		width: 100%;
		height: 100%;
		object-fit: cover;
		object-position: center;
		opacity: 0.3;
	}

	.blueprint-overlay {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: rgba(16, 24, 32, 0.8);
		z-index: -1;
	}

	.blueprint-content {
		position: relative;
		z-index: 1;
		height: 100%;
		display: flex;
		align-items: center;
		justify-content: center;
		text-align: center;
	}

	.blueprint-title {
		font-size: 4rem;
		font-weight: 500;
		color: white;
		text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
		line-height: 1.2;
		letter-spacing: 3px;
		text-transform: uppercase;
		margin: 0;
		font-family: 'Sinkin Sans', system-ui, sans-serif;
	}

	.clients {
		background: #ffffff;
		padding: 8rem 0;
		position: relative;
	}

	.clients::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 1px;
		background: #84754e;
	}

	.clients-grid {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 3rem;
		margin-top: 3rem;
	}

	.client-card {
		text-align: center;
		padding: 3rem 2rem;
		border: 2px solid transparent;
		transition: all 0.3s ease;
		position: relative;
		overflow: hidden;
	}

	.client-card::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 3px;
		background: #84754e;
		transform: scaleX(0);
		transition: transform 0.3s ease;
	}

	.client-card:hover::before {
		transform: scaleX(1);
	}

	.client-card:hover {
		border-color: #84754e;
		transform: translateY(-8px);
		box-shadow: 0 20px 40px rgba(132, 117, 78, 0.1);
	}

	.client-logo {
		margin-bottom: 1rem;
		display: flex;
		justify-content: center;
		align-items: center;
		height: 60px;
	}

	.vendor-logo {
		max-width: 100%;
		max-height: 100%;
		object-fit: contain;
	}

	.client-card p {
		color: #666;
		font-size: 1.1rem;
		line-height: 1.6;
		margin: 0;
	}

	@media (max-width: 768px) {
		.hero {
			padding: 6rem 0 3rem;
		}

		.hero-title {
			font-size: 2.5rem;
		}

		.hero-subtitle {
			font-size: 1.1rem;
		}

		.hero-options {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}

		.company-title {
			font-size: 2.5rem;
		}

		.company-text p {
			font-size: 1.1rem;
		}

		.blueprint-background {
			height: 300px;
		}

		.blueprint-title {
			font-size: 2.5rem;
			letter-spacing: 2px;
		}

		.clients-grid {
			grid-template-columns: 1fr;
			gap: 2rem;
		}

		.client-logo {
			font-size: 2rem;
		}
	}
</style>
